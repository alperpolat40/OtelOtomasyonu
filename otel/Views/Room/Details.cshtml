@model otel.Models.Room

<div class="room-details">
    <h2>@Model.Name</h2>
    <p>Fiyat: $@Model.Price / gece</p>
    <p>@Model.Description</p>

    <h3>Oda Fotoğrafları</h3>
    <div class="gallery">
        <img src="~/images/room1.jpg" alt="Oda Görseli 1" />
        <img src="~/images/room2.jpg" alt="Oda Görseli 2" />
    </div>

    <form asp-action="BookRoom" asp-controller="Booking">
        <input type="hidden" name="roomId" value="@Model.Id" />
        <label>Giriş Tarihi:</label>
        <input type="date" name="checkInDate" required />
        <button type="submit">Rezervasyon Yap</button>
    </form>
</div>
